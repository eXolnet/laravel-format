{
    "name": "exolnet/laravel-format",
    "description": "Utility class to format values for display.",
    "keywords": [
        "exolnet",
        "laravel",
        "laravel-format"
    ],
    "homepage": "https://github.com/eXolnet/laravel-format",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexandre D'Eschambeault",
            "homepage": "https://www.exolnet.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "illuminate/support": "5.5.*|5.6.*|5.7.*|5.8.*|6.0.*",
        "nesbot/carbon": "^1.20"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^6.0",
        "orchestra/testbench" : "^3.5",
        "squizlabs/php_codesniffer": "^3.3.2"
    },
    "autoload": {
        "psr-4": {
            "Exolnet\\Format\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Exolnet\\Format\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "vendor/bin/phpcs -p --standard=PSR2 config src tests",
        "lint-fix": "vendor/bin/phpcbf -p --standard=PSR2 config src tests",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Exolnet\\Format\\FormatServiceProvider"
            ],
            "aliases": {
                "Format": "Exolnet\\Format\\FormatFacade"
            }
        }
    }
}
