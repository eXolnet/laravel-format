{
    "name": "exolnet/laravel-format",
    "description": "Utility class to format values for display.",
    "keywords": [
        "exolnet",
        "laravel",
        "laravel-format"
    ],
    "homepage": "https://github.com/eXolnet/laravel-format",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexandre D'Eschambeault",
            "homepage": "https://www.exolnet.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-intl": "*",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "giggsey/libphonenumber-for-php": "^8.12",
        "mockery/mockery": "^1.4",
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.3.3",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "suggest": {
        "giggsey/libphonenumber-for-php": "Required to format phone numbers."
    },
    "autoload": {
        "psr-4": {
            "Exolnet\\Format\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Exolnet\\Format\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "vendor/bin/phpcs -p --standard=PSR2 config src tests",
        "lint-fix": "vendor/bin/phpcbf -p --standard=PSR2 config src tests",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Exolnet\\Format\\FormatServiceProvider"
            ],
            "aliases": {
                "Format": "Exolnet\\Format\\FormatFacade"
            }
        }
    }
}
